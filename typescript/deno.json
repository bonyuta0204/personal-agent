{
  "tasks": {
    "dev": "deno run --allow-env --allow-net --watch main.ts",
    "start": "deno run --allow-env --allow-net main.ts",
    "cli": "deno run --allow-env --allow-net src/cli/pm_chat.ts",
    "test": "deno test --allow-env --allow-net"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "std/": "https://deno.land/std@0.207.0/",
    "postgres": "https://deno.land/x/postgres@v0.17.0/mod.ts",
    "@langchain/core": "npm:@langchain/core",
    "@langchain/core/output_parsers": "npm:@langchain/core/output_parsers",
    "@langchain/openai": "npm:@langchain/openai",
    "langsmith": "npm:langsmith",
    "@langchain/community": "npm:@langchain/community"
  },
  "nodeModulesDir": "auto",
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars", "no-explicit-any"]
    }
  },
  "fmt": {
    "options": {
      "useTabs": false,
      "lineWidth": 100,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  }
}
